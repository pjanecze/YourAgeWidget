<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget"></style>
    <style name="Widget.Checkbox">
        <item name="android:paddingLeft">50dp</item>
    </style>
    <style name="formatStyle">
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/holo_blue_light</item>
        <item name="android:textSize">26sp</item>
        <item name="android:shadowColor">@color/holo_blue_dark</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>    
        
    </style>
    <style name="typeStyle">
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/holo_orange_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:shadowColor">@color/holo_orange_dark</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:gravity">center_vertical|right</item>    
    </style>
    <style name="greenTextStyle">
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/holo_green_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:shadowColor">@color/holo_green_dark</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:gravity">center_vertical|right</item>
    </style>
</resources>