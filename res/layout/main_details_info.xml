<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <TextView
            style="@style/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_you_live" 
            android:drawableRight="@drawable/born"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_blue" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1" >

            <TableRow>

                <TextView
                    android:id="@+id/tv_years"
                    style="@style/formatInfoStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="5dp" />

                <TextView
                    android:id="@+id/tv_type_years"
                    style="@style/typeStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/txt_year" />
                
                <TextView
                    android:id="@+id/tv_months"
                    style="@style/formatInfoStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="5dp" />

                <TextView
                    android:id="@+id/tv_type_months"
                    style="@style/typeStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/txt_month" />
            </TableRow>


            <TableRow>

                <TextView
                    android:id="@+id/tv_weeks"
                    style="@style/formatInfoStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="5dp" />

                <TextView
                    android:id="@+id/tv_type_weeks"
                    style="@style/typeStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/txt_week" />
                <TextView
                    android:id="@+id/tv_days"
                    style="@style/formatInfoStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="5dp" />

                <TextView
                    android:id="@+id/tv_type_days"
                    style="@style/typeStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/txt_day" />
            </TableRow>
            <TableRow>

                <TextView
                    android:id="@+id/tv_hours"
                    style="@style/formatInfoStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="5dp" />

                <TextView
                    android:id="@+id/tv_type_hours"
                    style="@style/typeStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/txt_hour" />
            </TableRow>
        </TableLayout>
        
        <TextView
            style="@style/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/txt_your_birthday_in"
            android:drawableRight="@drawable/cake" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_blue" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1" >

            <TableRow>
                
                <TextView
                    android:id="@+id/tv_months_bd"
                    style="@style/formatInfoStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="5dp" />

                <TextView
                    android:id="@+id/tv_type_months_bd"
                    style="@style/typeStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/txt_month" />
                
                
                <TextView
                    android:id="@+id/tv_weeks_bd"
                    style="@style/formatInfoStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="5dp" />

                <TextView
                    android:id="@+id/tv_type_weeks_bd"
