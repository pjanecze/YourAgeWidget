            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/txt_facts"
            android:drawableRight="@drawable/facts" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_blue" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:stretchColumns="1" >

            <TableRow>
				<TextView
				    style="@android:style/TextAppearance.Small"
				    android:textColor="@android:color/white"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="@string/oldest_person_was"
				    android:gravity="center_horizontal"
				    />
            </TableRow>
            
            <TableRow >
                <TextView
                    style="@style/formatInfoStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:text="122" />

                <TextView
                    style="@style/typeStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/txt_years" />
                <TextView
                    style="@style/formatInfoStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="5dp" 
                    android:text="164"/>

                <TextView
                    style="@style/typeStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/txt_days" />
            </TableRow>

            <TableRow>
				<TextView
				    style="@android:style/TextAppearance.Small"
				    android:textColor="@android:color/white"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="@string/average_age_man"
				    android:gravity="center_horizontal"
				    android:paddingTop="5dp"
				    />
            </TableRow>
            
            <TableRow >
                <TextView
                    style="@style/formatInfoStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:text="34" />

                <TextView
                    style="@style/typeStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/txt_years" />
                <TextView
                    style="@style/formatInfoStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="5dp" 
                    android:text="190"/>

                <TextView
                    android:id="@+id/tv_type_days_om"
                    style="@style/typeStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/txt_days" />
            </TableRow>
            <TableRow>
				<TextView
				    style="@android:style/TextAppearance.Small"
				    android:textColor="@android:color/white"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="@string/average_age_women"
				    android:gravity="center_horizontal"
				    android:paddingTop="5dp"
				    />
            </TableRow>
            
            <TableRow >
                <TextView
                    style="@style/formatInfoStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:text="38" />

                <TextView
                    style="@style/typeStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/txt_years" />
                <TextView
                    style="@style/formatInfoStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="5dp" 
                    android:text="179"/>

                <TextView
                    style="@style/typeStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/txt_days" />
            </TableRow>
        </TableLayout>
        
        
    </LinearLayout>

</ScrollView>